<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".test.TestActivity">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/question_tv"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="43dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/answer1_rb" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginEnd="36dp"/>
    <RadioButton
            android:text="RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer1_rb"
            app:layout_constraintTop_toBottomOf="@+id/question_tv" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/answer2_rb"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginEnd="36dp"/>
    <RadioButton
            android:text="RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer2_rb"
            app:layout_constraintTop_toBottomOf="@+id/answer1_rb" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/answer3_rb"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginEnd="36dp"/>
    <RadioButton
            android:text="RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer3_rb"
            app:layout_constraintTop_toBottomOf="@+id/answer2_rb" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/answer4_rb"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginEnd="36dp"/>
    <RadioButton
            android:text="RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer4_rb"
            app:layout_constraintTop_toBottomOf="@+id/answer3_rb" android:layout_marginBottom="88dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/result_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginEnd="36dp"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/result_btn"
            app:layout_constraintTop_toBottomOf="@+id/answer4_rb" android:layout_marginBottom="203dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="36dp" android:layout_marginEnd="36dp"/>
</android.support.constraint.ConstraintLayout>