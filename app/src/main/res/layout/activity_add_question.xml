<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".new_question.AddQuestionActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/question_et"
            android:hint="Enter question"
            android:layout_marginTop="49dp"
            android:layout_marginBottom="57dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/answer1_et" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/answer1_et"
            android:hint="Enter first answer"
            app:layout_constraintTop_toBottomOf="@+id/question_et" android:layout_marginBottom="34dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/answer2_et"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/answer2_et"
            android:hint="Enter second answer"
            app:layout_constraintTop_toBottomOf="@+id/answer1_et" android:layout_marginBottom="31dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/answer3_et"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/answer3_et"
            android:hint="Enter third answer"
            app:layout_constraintTop_toBottomOf="@+id/answer2_et" android:layout_marginBottom="31dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/answer4_et"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/answer4_et"
            android:hint="Enter forth answer"
            app:layout_constraintTop_toBottomOf="@+id/answer3_et" android:layout_marginBottom="46dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/add_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
    <Button
            android:text="Add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_btn"
            android:onClick="onAddClicked"
            app:layout_constraintTop_toBottomOf="@+id/answer4_et" android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/go_to_questions_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
    <Button
            android:text="Go to questions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/go_to_questions_btn"
            android:onClick="onGoToQuestionClicked"
            app:layout_constraintTop_toBottomOf="@+id/add_btn"
            android:layout_marginBottom="46dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
</android.support.constraint.ConstraintLayout>